<?php
namespace EclecticMatt\ai\classes;

require_once($_SERVER['DOCUMENT_ROOT'] . '/ai/config.class');
//use EclecticMatt\ai as Config;

class TeamsWebhook {

	private $teamsUri = null;
	
	public function __construct(){

		$this->teamsUri = \EclecticMatt\ai\Config::getValue('teams.webhook.url');
	}

	public function postRaw($json){

		//var_dump($this->teamsUri);

		//SET UP CURL
		$ch = curl_init();
		$options = array(
			CURLOPT_URL => $this->teamsUri,
			CURLOPT_RETURNTRANSFER => true,
			CURLOPT_ENCODING => "",
			CURLOPT_MAXREDIRS => 10,
			CURLOPT_TIMEOUT => 30,
			CURLOPT_HTTP_VERSION => CURL_HTTP_VERSION_1_1,
			CURLOPT_CUSTOMREQUEST => "POST",
			CURLOPT_POSTFIELDS => $json,
			CURLOPT_HTTPHEADER => [
				"accept: application/json",
				"content-type: application/json"
			]
		);
		curl_setopt_array($ch, $options);
		$response = curl_exec($ch);
		curl_close($ch);

		return $response;
	}

	public function postImage($title="GUESS THE PROMPT", $url=null)
	{
		if(is_null($url)){
			throw new \Exception('Requires an input image URL');
		}

		//MESSAGE
		$message = '<h1>' . $title . '</h1>';
		$message .= '<img src="' . $url . '" />';

		//SET UP CURL
		$ch = curl_init();
		$options = array(
			CURLOPT_URL => $this->teamsUri,
			CURLOPT_RETURNTRANSFER => true,
			CURLOPT_ENCODING => "",
			CURLOPT_MAXREDIRS => 10,
			CURLOPT_TIMEOUT => 30,
			CURLOPT_HTTP_VERSION => CURL_HTTP_VERSION_1_1,
			CURLOPT_CUSTOMREQUEST => "POST",
			CURLOPT_POSTFIELDS => json_encode([
				'text' => $message
			]),
			CURLOPT_HTTPHEADER => [
				"accept: application/json",
				"content-type: application/json"
			]
		);
		curl_setopt_array($ch, $options);
		$response = curl_exec($ch);
		curl_close($ch);

		return $response;
	}
}

?>